<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="web.dao.face.UserDao">

	<insert id="insertJoin" parameterType="User">
		INSERT INTO User ( id,pw,name,nick,birth,email,gender,phone,addr,joinDate)
		VALUES (#{id}, #{pw}, #{name}, #{nick}, #{birth}, #{email}, #{gender}, #{phone}, #{addr}, #{joinDate})
	</insert>
	
	<select id="selectCntByIdPw" resultType="int" parameterType="User">
		SELECT count(*) FROM (
			SELECT id,pw
			FROM usertb
			<where>
				AND id = #{id}
				AND pw = #{pw}
			</where>
		)
	</select>

	<select id="selectByNick" resultType="User" parameterType="User">
		SELECT id, pw, nick
		FROM User
		<where>
			AND id = #{id}
		</where>
	</select>



</mapper>